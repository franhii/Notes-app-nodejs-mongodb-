{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>
            {{title}}
          </td>
          <td>
            {{description}}
          </td>
          <td>
            {{#if done}}
              <a
                href="/tasks/{{_id}}/toggleDone "
                class="btn btn-dark"
              >Undone</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-success"
              >Done</a>
            {{/if}}

            <a href="/tasks/{{_id}}/edit" class="btn btn-warning">Update</a>
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>

          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>
{{else}}

  <div class="text-center text-white">
    <h1>No Tasks created</h1>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="100"
        height="120"
        fill="currentColor"
        class="bi bi-file-earmark-x"
        viewBox="0 0 16 16"
      >
        <path
          d="M6.854 7.146a.5.5 0 1 0-.708.708L7.293 9l-1.147 1.146a.5.5 0 0 0 .708.708L8 9.707l1.146 1.147a.5.5 0 0 0 .708-.708L8.707 9l1.147-1.146a.5.5 0 0 0-.708-.708L8 8.293 6.854 7.146z"
        ></path>
        <path
          d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z"
        ></path>
      </svg>

  </div>
{{/if}}